{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@internal/*": [
        "internal-components/*"
      ],
      "@contexts": [
        "contexts"
      ],
      "@hooks": [
        "hooks"
      ],
      "@lib": [
        "lib"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@styles/*": [
        "styles/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "lib",
    "noEmit": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "__mocks__",
    "__tests__"
  ]
}
